!!! 5
%html
  %head
    %title Paperplane.io - Blog
    %link(rel="stylesheet" href="/css/style.css" type="text/css")
    %link(rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml")
    %script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js")
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width', 'initial-scale' => '1' }
    {% if page.description %}
    %meta{ name: 'description', content: "{{page.description}}"}
    {% else %}
    %meta{ name: 'description', content: "Paperplane.io turns dropbox folders or GitHub repos into websites. On our blog we answer questions, show off cool projects, and advocate static web sites." }
    {% endif %}
  %body
    
    %header
      %h1
        %a.brand(href="/")
          %img(src="//www.paperplane.io/images/logo.sm.png")
          paperplane.io <i class="icon-caret-right"></i> blog
      %nav
        %a(href="//www.paperplane.io/") home
        %a(href="/archive.html") archive
        %a(href="/rss.xml") rss
        %a(href="http://twitter.com/paperplaneio") <i class="icon-twitter"></i> follow us on twitter

    #content
      {{ content }}

    %footer
      %p &copy; Paperplane.io

      %nav
        %a(href="//www.paperplane.io/") about paperplane.io
        %a(href="//www.paperplane.io/tos") Terms of Service
        %a(href="//www.paperplane.io/privacy") Privacy Policy
      %nav
        %a(href="http://twitter.com/paperplaneio") <i class="icon-twitter"></i>
        %a(href="/rss.xml") <i class="icon-rss"></i>

    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-33628487-2', 'paperplane.io');
      ga('send', 'pageview');